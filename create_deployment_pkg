#!/bin/bash

set -euf -o pipefail

readonly WORKING_DIR="$PWD"
readonly OUTPUT_DIR="/tmp/deploy"
readonly DEPENDENCIES=$(python -c "import site; print(site.getsitepackages()[0])")

if [[ -z $1 ]]; then
    echo "Usage: $0 <output zip>" >&2
    exit 1
fi

readonly OUTPUT_ZIP="$1"

if [[ -d $OUTPUT_DIR ]]; then
    echo "Output dir already exists" >&2
    exit 1
fi

mkdir "$OUTPUT_DIR"
rsync -a "$DEPENDENCIES/" "$OUTPUT_DIR"
rsync -a pushover_notification.py "$OUTPUT_DIR"
du -sh "$OUTPUT_DIR"

cd "$OUTPUT_DIR"  # cannot have container dir in zip
zip -qr9 "$OUTPUT_ZIP" .
cd "$WORKING_DIR"
du -sh "$OUTPUT_ZIP"
